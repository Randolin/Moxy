{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16",
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "CommonJS",
    "target": "ES2021",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build/"
  },
  "baseUrl": "./src",
  "paths": {
    "@config/*": ["config/*"],
    "@controllers/*": ["controllers/*"],
    "@models/*": ["models/*"],
    "@routes/*": ["routes/*"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
